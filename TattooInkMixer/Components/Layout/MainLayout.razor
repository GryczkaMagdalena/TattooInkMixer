@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudText Typo="Typo.h6">Tattoo Ink Mixer</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Text" Color="Color.Inherit">Log in</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ms-2">Sign up</MudButton>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="py-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
